<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cl.inacap.puntaarenas.frescosapp.RealizarPedidoActivity">

    <EditText
        android:id="@+id/numPedido"
        android:hint="Nº Pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        />
    <TextView
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_column="0"
        android:layout_row="1"
        android:paddingTop="15dp"
        android:text="Selecione Cliente:"
        android:textSize="15dp" />

    <Spinner
        android:id="@+id/seleccionClientes"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:paddingTop="15dp">

    </Spinner>

    <Button
        android:onClick="cambiarRut"
        android:text="Rut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        />

    <TextView
        android:id="@+id/rut"
        android:text="Rut del cliente"
        android:textSize="15dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:text="Fecha Entrega:"
        android:layout_row="3"
        android:layout_column="0"
        android:textSize="15dp"
        android:paddingTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/fecha"
        android:hint="Año - Mes - Dia"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Selecione producto:"
        android:layout_row="4"
        android:layout_column="0"
        android:textSize="15dp"
        android:paddingTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Spinner
        android:id="@+id/seleccionProducto"
        android:layout_width="130dp"
        android:layout_height="37dp"
        android:paddingTop="15dp"
        android:layout_column="0"
        android:layout_row="5">

    </Spinner>

    <EditText
        android:id="@+id/cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="5"
        android:hint="Cantidad nº" />

    <Button
        android:onClick="ingresarLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:text="Ingresar producto"
        android:layout_column="0"

        />

    <TextView
        android:text="Total $:"
        android:layout_row="7"
        android:layout_column="0"
        android:textSize="15dp"
        android:paddingTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/total"
        android:text="$$$$$$$"
        android:layout_row="7"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:text="Estado"
        android:layout_row="8"
        android:layout_column="0"
        android:textSize="15dp"
        android:paddingTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Spinner
        android:id="@+id/estado"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="9"
        android:paddingTop="15dp">

    </Spinner>

    <Button
        android:onClick="agregarPedido"
        android:text="Agregar Pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="10"
        android:layout_column="0"
        />

</GridLayout>
