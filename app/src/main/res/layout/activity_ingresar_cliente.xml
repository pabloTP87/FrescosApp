<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_row="0"
    tools:context="cl.inacap.puntaarenas.frescosapp.IngresarClienteActivity">

    <TextView
        android:text="Rut Cliente:"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/rutCliente"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0" />

    <TextView
        android:text="Nombre del Local:"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/nombreLocal"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1" />

    <TextView
        android:text="Nombre del Contacto:"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/nombreContacto"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2" />

    <TextView
        android:text="Direccion:"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/direccion"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3" />

    <TextView
        android:text="Telefono:"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/telefono"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="4" />

    <Button
        android:text="Ingresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="5"
        android:onClick="ingresarClick"
        />



</GridLayout>
